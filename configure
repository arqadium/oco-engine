import os, zipfile

try:
    from urllib.request import urlretrieve
except ImportError:
    from urllib import urlretrieve

tcVersion = '0.1.4'



## ============================ F U N C T I O N ============================ #
## void main(string[])
##
## TITLE:       Main
## DESCRIPTION: Application entry point
##
## PARAMETER: list of command-line arguments, starting with the script name.
##
## RETURNS: Integer exit code; handed back to the operating system.
def main(args):
    buildDir = os.path.join(os.getcwd(), 'build')
    btoolDir = os.path.join(buildDir, 'tools')
    btoolOName = os.path.join(btoolDir, 'buildtool.py')
    if not os.path.exists(btoolDir):
        os.makedirs(btoolDir)
        try:
            urlretrieve(
            'https://github.com/arqadium/oco-toolchain/archive/v' + tcVersion
                + '.zip',
                btoolDir + '.zip')
        except Exception as ex:
            print('Exception thrown while retrieving URL; check connection')
            return
        arc = zipfile.ZipFile(btoolDir + '.zip')
        pyfiles = ['buildtool.py', 'colour.py', 'ini.py']
        for pyfile in pyfiles:
            btoolIn = arc.open('oco-toolchain-' + tcVersion + '/src/' +
                pyfile)
            btoolOut = open(os.path.join(btoolDir, pyfile), 'wb')
            btoolOut.write(btoolIn.read())
            btoolOut.close()
            btoolIn.close()
        arc.close()
    if os.name == 'nt':
        with open('make.bat', 'w') as out:
            out.write('@ECHO OFF\nPYTHON ' + btoolOName + ' main.ini "%1"\n')
        with open('clean.bat', 'wb') as out:
            text = '@ECHO OFF\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m Arqadium Build Tool\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m Part of the \u00D4\u00C7\u00F4 Working Set Toolchain\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m Copyright \u00A9 2017 Arqadium. All rights reserved.\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m \x1B[38mCleaning\x1B[0m \x1B[1;30mthe build files\x1B[0m...\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m\r\nDEL /s /q ' + buildDir + '\\code\\ 2>nul >nul\r\nRMDIR /s /q ' + buildDir + '\\code\\ 2>nul >nul\r\nDEL /s /q /f ' + buildDir + '\\*.exe 2>nul >nul\r\nDEL /s /q /f ' + buildDir + '\\*.dll 2>nul >nul\r\nDEL /s /q /f ' + buildDir + '\\*.lib 2>nul >nul\r\n'
            out.write(text.encode('utf8'))
        with open('distclean.bat', 'wb') as out:
            text = '@ECHO OFF\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m Arqadium Build Tool\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m Part of the \u00D4\u00C7\u00F4 Working Set Toolchain\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m Copyright \u00A9 2017 Arqadium. All rights reserved.\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m \x1B[1;4;38mCleaning\x1B[0m \x1B[1;30mthe build files\x1B[0m...\r\nECHO \x1B[1;38m[\u00D4\u00C7\u00F4]\x1B[0m\r\nDEL /s /q ' + buildDir + '\\\r\nRMDIR /s /q ' + buildDir + '\\\r\n'
            out.write(text.encode('utf8'))
        with open('lint.bat', 'w') as out:
            out.write('@ECHO OFF\nPYTHON ' + btoolOName + ' main.ini lint\n')
    else:
        with open('Makefile', 'w') as out:
            out.write('.PHONY: debug release clean distclean lint\ndebug:' +
                '\n\t@python3 ' + btoolOName + ' main.ini debug\n\n' +
                'release:\n\t@python3 ' + btoolOName + ' main.ini release' +
                '\n\nclean:\n\t@rm -rf ' + buildDir + '/code\n\t@rm -f ' +
                '$$(find ' + buildDir + ' -exec file {} \; | grep -i elf ' +
                '| sed -e \'s/:.*//\')\n\ndistclean:\n\t@rm -rf ' + buildDir +
                '\n\t@rm -f Makefile\n\nlint:\n\t@python3 ' + btoolOName +
                ' main.ini lint\n')
            out.close()



## =========================== B O O T S T R A P =========================== #
## Application bootstrapper, guarding against code execution upon import.
if __name__ == '__main__':
    try:
        from sys import argv, exit
        main(argv)
    except Exception as ex:
        raise ex
    except:
        print('Rogue exception:', sys.exc_info()[0])
